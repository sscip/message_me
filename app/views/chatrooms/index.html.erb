<h4 class="ui center aligned medium icon header">
  <i class="circular blue comments outline icon"></i>
  Say somethin'
</h4>
<div class="ui two coulmn grid">
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui feed">
          <div class="ui comments">
            <div class="comment">
              <div class="text">
                <div class="content">
                  <% @messages.each do |message| %>
                    <div class="ui inline">
                      <em><%= message.user.username %></em>>
                      <%= message.body %>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="extra content">
        <form class="ui reply form">
          <div class="field">
            <div class="ui fluid icon input">
              <input type="text" placeholder="Enter a message...">
              <i class="bordered inverted blue edit outline icon"></i>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui inverted vertical menu">
          <a class="item">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
